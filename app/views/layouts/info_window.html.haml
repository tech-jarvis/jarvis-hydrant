#loader{:style => "display: none;"}
  = image_tag "ajax-loader.gif"
#info_window
  - if flash[:notice]
    .alert-message.success
      %p
        = flash[:notice]
  - if flash[:warning]
    .alert-message.warning
      %p
        = flash[:warning]
  - if flash[:error]
    .alert-message.error
      %p
        = flash[:error]
  = yield
